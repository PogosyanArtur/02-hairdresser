.Contacts-Section
    display flex


.Contacts-Section__map
    height 600px
    overflow hidden
    flex-grow: 1

.Contacts-Section__content
    font-family $ff_0
    color: $c_black

    padding: 20px 30px

.Contacts-Section__caption
    font-family inherit
    font-weight 400
    font-size 30px
    letter-spacing: 1px
    text-align: left
    color: inherit

.Contacts-Section__label
    font-family inherit
    font-weight 700
    font-size 18px
    text-align: left
    color: inherit

    padding: 20px 0

.Contacts-Section__list
    list-style: none

.Contacts-Section__item
    font-family inherit 
    font-size 14px
    font-weight 400
    color $c_black_2

    padding: 10px 0

.Contacts-Section__item::first-child
    padding: 30px 10px

.Contacts-Section__item:hover .Contacts-Section__link
    color $c_main
.Contacts-Section__link
    font-family inherit 
    font-style inherit
    font-weight inherit
    color inherit
    text-decoration: none
 