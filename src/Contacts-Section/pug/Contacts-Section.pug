include ContactsData

mixin Contacts(className="")
	section.Contacts-Section
		.Contacts-Section__map
			<script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A5fc8b9a7969f9f13aae0bd76177ade3f07fd1a3d0a830309b52291d4f2de305e&amp;width=100%25&amp;height=600&amp;lang=ru_RU&amp;scroll=true"></script>
		.Contacts-Section__content(class=" "+ className)
			h3.Contacts-Section__caption Контакты
			img(src="img/"+ ImagesData['logo']['names']['921x1387']).Contacts__logo
			ul.Contacts-Section__list
				li.Contacts-Section__item= LinksData['address']['name']
				each val in ContactsData
					li.Contacts-Section__item
						a.Contacts-Section__link(href=val.href)
							span.Contacts-Section__legend= val.name + ": "
							span.Contacts-Section__info= val.content
