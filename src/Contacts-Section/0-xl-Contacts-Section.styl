.Contacts-Section
    display flex
    &__map
        height 600px
        overflow hidden
        flex-grow: 1
    &__content
        font-family $ff_0
        color: $c_black
        padding: 20px 30px
    &__content_hide
        display none
    &__caption
        font-family inherit
        font-weight 400
        font-size 30px
        letter-spacing: 1px
        text-align: left
        color: inherit
    &__label
        font-family inherit
        font-weight 700
        font-size 18px
        text-align: left
        color: inherit
        padding: 20px 0
    &__list
        list-style: none
    &__item
        font-family inherit 
        font-size 14px
        font-weight 400
        color $c_black_2
        padding: 10px 0
    &__item::first-child
        padding: 30px 10px
    &__item:hover .Contacts-Section__link
        color $c_main
    &__link
        font-family inherit 
        font-style inherit
        font-weight inherit
        color inherit
        text-decoration: none 
    &__logo
        height 20rem
        max-width 100%
        padding: 2rem 4rem