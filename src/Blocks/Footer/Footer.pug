include ../Icons/Icons
mixin Footer__item(_x,_y)
		each item in _x[_y]
			if !item.subItems
				li.Footer__item
					a.Footer__link(href=item.href)= item.title
			else
				li.Footer__item
					a.Footer__link(href=item.href)= item.title
				each subItem in _x[item.subItems]            
					li.Footer__item.Footer__item_toRight
						a.Footer__link(href=subItem.href)= subItem.title

