.ImageCard__item
    position relative
    overflow hidden
    outline: none
    margin: 0 1rem

.ImageCard__item:hover .ImageCard__img
    overflow hidden
    transform: scale(1.15)
.ImageCard__item:hover .ImageCard__overlay
    opacity: 1

.ImageCard__overlay
    opacity  0 
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color: rgba($c_black,0.7)
    transition: opacity 0.3s

.ImageCard__overlayContent
    position absolute
    bottom 2rem
    left 2rem
    text-align: left

.ImageCard__overlayText
    font-family $ff_0
    letter-spacing: 1px
    font-weight normal
    text-transform: capitalize
    padding-bottom: 1rem
    color: $c_white

.ImageCard__imgBox
    overflow hidden

.ImageCard__img
    max-width 100%
    transition: transform 0.3s 
