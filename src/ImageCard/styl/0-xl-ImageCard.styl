.ImageCard__container
    margin: 1rem
    position relative
    overflow hidden
    outline: none
.ImageCard__item:hover .ImageCard__img
    overflow hidden
    transform: scale(1.2)
.ImageCard__item:hover .ImageCard__overlay
    opacity: 1
.ImageCard__overlay
    opacity  0 
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color: rgba($c_black,0.7)
    transition: opacity 0.3s
.ImageCard__overlayContent
    position absolute
    bottom 2rem
    left 2rem
    text-align: left

.ImageCard__overlayText
    font-family $ff_0
    letter-spacing: 1px
    font-weight normal
    text-transform: uppercase
    padding-bottom: 1rem
    color: $c_white
    font-size 15px
.ImageCard__img
    max-width 100%
    transition: transform 0.3s
    transform: scale(1)
    display: block
