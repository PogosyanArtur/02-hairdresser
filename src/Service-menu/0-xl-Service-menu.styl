.Service-Menu
	list-style none
	margin 0
	padding 0
	&__item 
		padding 0 15px 0 0
		background-color $c_black_3
		border-radius  5px
		cursor pointer
		color $c_black_2
	&__item + &__item 
		margin 5px 0

	&__item_active
		background-color $c_main
		color $c_white

	&__item_active &__icon
		fill $c_white
		
	&__item&__item_active:hover &__link
		color $c_white

	&__item&__item_active:hover &__icon
		fill $c_white

	&__item:hover &__link,
	&__item:focus &__link
		color $c_main

	&__link
		text-decoration none
		color inherit
		font-size 16px
		letter-spacing 1px
		padding 0.8em 0.5em 0.8em 2em
		display flex 
		justify-content space-between
		white-space nowrap
	&__icon
		display inline-block
		margin-left 2em
		transform rotate(90deg)

