include ServiceMenuData
mixin Service-Menu(blockClass="")
    ul.Service-Menu(class=" "  + blockClass)
        li.Service-Menu__item(class={'Service-Menu__item_active':'Все услуги'===currentSubPage})
            a.Service-Menu__link(href="service-all.html") Все услуги
                +Icons('arrow_up',"Service-Menu__icon")
        each item in ServiceMenuData
            li.Service-Menu__item(class={'Service-Menu__item_active': item.title===currentSubPage})
                a.Service-Menu__link(href=item.href)= item.title
                    +Icons('arrow_up',"Service-Menu__icon")
