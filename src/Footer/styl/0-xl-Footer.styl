.Footer
    background-color $c_black_4
.Footer__top
    display flex
    justify-content space-between
    padding: 7rem 0
.Footer__card
    font-family $ff_0
    letter-spacing: 1px
    font-weight 300
.Footer__content
    list-style none
    color $c_black_2
    font-size 1.4rem
.Footer__title
    text-transform: uppercase
    font-size 1.7rem    
    color: $c_white 
    padding-bottom: 2rem
.Footer__text
    margin-left 1rem
.Footer__item
    display flex
    justify-content space-between
    text-transform: capitalize
    padding-top: 0.8rem
    padding-bottom: 0.8rem
    color $c_black_2
    font-size 1.4rem
.Footer__item_toRight
    padding-left:2rem 
.Footer__item_light
    padding-right: 3rem 
    color $c_white
.Footer__item_close
    color $c_main
.Footer__link
    display flex
    align-items: center
    text-decoration: none
    color inherit
    cursor pointer
    &:focus,
    &:focus svg,
    &:hover,
    &:hover svg
        color $c_main
        fill $c_main

.Footer__bottom
    text-align: center
    font-size 1.4rem
    padding: 3rem 2rem
    background-color $c_black_5
    color $c_black_2

