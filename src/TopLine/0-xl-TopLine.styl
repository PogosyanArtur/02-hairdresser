.TopLine
    background-color $c_main
    &__container
        min-height 4rem
    &__flex
        display flex
        justify-content flex-end
        align-items: center
        height 4rem
    &__box
        display block
    &__item 
        position relative
        display inline-block
        margin-right 2rem
        padding-left 4rem
        text-decoration none
        cursor pointer
    &__icon
        display inline-block
        height 2rem
        width 2rem
        margin-right 2rem
    &__item-time
        cursor default
    &__content 
        color $c_white
        display inline-block
        font-size 1.4rem
        font-family $ff_1
    &__arrow
        display none
    &__icon
        position absolute
        top 50%
        left: 0%
        margin-top: -1rem
